{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(chmod:*)",
      "Bash(cp:*)",
      "Bash(env:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(nix:*)",
      "Bash(rg:*)",
      "Bash(touch:*)",
      "WebFetch(domain:docs.rs)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:release-plz.dev)",
      "Bash(gemini:*)",
      "Bash(../../target/debug/cuenv env --help)"
    ],
    "deny": []
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "nix fmt"
          }
        ]
      }
    ]
  }
}