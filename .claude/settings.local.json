{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(./scripts/test-examples.sh:*)",
      "Bash(./target/debug/cuenv:*)",
      "Bash(bun:*)",
      "Bash(cargo:*)",
      "Bash(curl:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(nix:*)",
      "Bash(tar:*)",
      "WebFetch(domain:github.com)",
      "Bash(find:*)",
      "Bash(timeout:*)",
      "Bash(./test_tempdir)",
      "Bash(rm:*)",
      "WebFetch(domain:nexte.st)",
      "Bash(RUST_BACKTRACE=1 nix develop -c cargo nextest run test_task_execution --no-capture)",
      "Bash(touch:*)",
      "Bash(mv:*)",
      "Bash(sed:*)",
      "Bash(RUST_LOG=debug ./target/debug/cuenv exec -- cargo:*)",
      "Bash(env RUST_LOG=debug ./target/debug/cuenv exec -- cargo:*)",
      "Bash(strace:*)",
      "Bash(RUST_LOG=debug ./target/debug/cuenv exec:*)",
      "Bash(export RUST_LOG=debug)",
      "Bash(export RUST_LOG=cuenv=debug)",
      "Bash(RUST_LOG=debug ./target/release/cuenv exec -- which treefmt)",
      "Bash(env RUST_LOG=debug ./target/release/cuenv exec -- env)",
      "Bash(./target/release/cuenv exec -- which treefmt)"
    ],
    "deny": []
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "nix fmt"
          }
        ]
      }
    ]
  }
}