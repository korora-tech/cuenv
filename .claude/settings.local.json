{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(gh:*)",
      "Bash(grep:*)",
      "Bash(nix:*)",
      "WebFetch(domain:github.com)",
      "Bash(timeout 300 nix develop -c cargo test:*)",
      "Bash(timeout 30 nix develop -c cargo nextest run:*)"
    ],
    "deny": []
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "nix fmt"
          }
        ]
      }
    ]
  }
}